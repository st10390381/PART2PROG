        margin-top: 20px;
    }

    .btn-submit {
        background-color: #007bff;
        color: white;
        padding: 12px 20px;
        border: none;
        border-radius: 5px;
        text-decoration: none;
        font-size: 16px;
        cursor: pointer;
        display: inline-block;
        transition: background-color 0.3s ease;
    }

        .btn-submit:hover {
            background-color: #0056b3;
        }

        .btn-submit i {
            margin-right: 8px;
        }
</style>