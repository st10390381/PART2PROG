@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CCMS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PART2PROG.styles.css" asp-append-version="true" />
</head>
<body>

    <header>
        <nav class="navbar navbar-expand-sm">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/images/LOGO.webp" alt="CCMS Logo" />

                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        @if (User.IsInRole("Lecturer"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Lecturer" asp-action="Dashboard">Your Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Claim" asp-action="Create">Submit a Claim</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Claim" asp-action="TrackClaims">Claims Progress</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="HR" asp-action="Index">HR</a>
                            </li>
                        }

                        @if (User.IsInRole("Programme Coordinator"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="ProgrammeCoordinator" asp-action="Index">Coordinator</a>
                            </li>
                        }

                        @if (User.IsInRole("Academic Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="AcademicManager" asp-action="Index">Manager</a>
                            </li>
                        }
                    </ul>

                   @*  <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            @if ( User.IsInRole("Lecturer"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="Lecturer" asp-action="Dashboard">My Dashboard</a>
                            }
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Claim" asp-action="TrackClaims">Claims</a>
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("Programme Coordinator"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="ProgrammeCoordinator" asp-action="Index">Coordinator</a>
                            }
                        </li>
                        <li class="nav-item">
                            @if (User.IsInRole("AcademicManager"))
                            {
                                <a class="nav-link text-dark" asp-area="" asp-controller="AcademicManager" asp-action="Index">Manager</a>
                            }
                        </li>
                    </ul> *@
                </div>
                <div class="navbar-nav ms-auto p-4 p-lg-0">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="text-center">
        <p style="color: white;">&copy; 2024 Claim Management System. All rights reserved.</p>
    </footer>
   @*  <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - PART2PROG - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

