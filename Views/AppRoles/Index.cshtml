@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Application Roles";
}

<div class="container-roles">
    <h2 class="roles-title">View Roles</h2>
    <div class="action-section">
        <a asp-action="Create" class="btn btn-primary btn-create-role">
            <i class="fas fa-plus"></i> Create Role
        </a>
    </div>
    <table class="table table-striped table-hover">
        <thead class="table-header">
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    /* General Container */
    .container-roles {
        margin: 20px auto;
        padding: 25px;
        background-color: #f8f9fa; /* Light background for the content */
        border: 1px solid #e0e0e0;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 800px;
    }

    /* Title */
    .roles-title {
        color: #343a40;
        text-align: center;
        margin-bottom: 30px;
        font-weight: bold;
    }

    /* Create Role Button */
    .btn-create-role {
        margin-bottom: 20px;
        display: inline-block;
        padding: 10px 20px;
        font-size: 16px;
        border-radius: 5px;
        text-decoration: none;
        background-color: #007bff; /* Blue button */
        color: white;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .btn-create-role:hover {
            background-color: #0056b3; /* Darker blue on hover */
            box-shadow: 0 2px 8px rgba(0, 123, 255, 0.5);
        }

    /* Table Styling */
    .table {
        width: 100%;
        border-collapse: collapse;
    }

    .table-header {
        background-color: #343a40; /* Dark header background */
        color: white;
    }

    .table th, .table td {
        padding: 15px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f1f1; /* Light hover effect */
    }
</style>
